{
  "info": {
    "name": "GLUU BLIP2 API Tests",
    "_postman_id": "a12345b6-7890-4def-b123-4567890abcd",
    "description": "Postman collection for testing GLUU BLIP2 Hybrid FastAPI backend locally and in AWS.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/",
          "host": ["{{base_url}}"],
          "path": [""]
        }
      },
      "response": []
    },
    {
      "name": "Analyze Single Image",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "files",
              "type": "file",
              "src": "sample_image.jpg"
            }
          ]
        },
        "url": {
          "raw": "{{base_url}}/analyze-images",
          "host": ["{{base_url}}"],
          "path": ["analyze-images"]
        }
      },
      "response": []
    }
  ],
  "event": [
    {
      "listen": "test",
      "script": {
        "exec": [
          "pm.test('Status code is 200', function() {",
          "    pm.response.to.have.status(200);",
          "});",
          "if (pm.response.code === 200) {",
          "    var jsonData = pm.response.json();",
          "    pm.test('Response includes product_type', function() {",
          "        pm.expect(jsonData).to.have.property('product_type');",
          "    });",
          "    pm.test('Response includes condition_report', function() {",
          "        pm.expect(jsonData).to.have.property('condition_report');",
          "    });",
          "}"
        ],
        "type": "text/javascript"
      }
    }
  ]
}
